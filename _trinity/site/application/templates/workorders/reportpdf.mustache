			}		

			.roof-first {
				float:left;
				width: 300px;
			}
			
			.roof-second {
				float:left;
				width: 300px;
				margin : 0 0 0 10px;
			}	

			.insured-info {
				float:left;
				width: 420px;
			}
			
			.adjuster-info {
				float:left;
				width: 200px;
				margin : 0 0 0 10px;
			}				
			
