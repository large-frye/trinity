<form action="{{post_url}}" method="post" accept-charset="utf-8" enctype="multipart/form-data">
	
<div class="section">
	<div class="box">
		<div class="title">Upload Photos for this Work Order</div>

		<div class="content">

			<div class="row">
				<label>Select one or more photos</label>
				<div class="right">
					<input type="file" name="files[]" multiple class="file-upload" />
					<button type="submit" class="blue upload-button"><span>Upload</span></button>
				</div>
			</div>
		</div>
	</div>
</div>

<input type="hidden" name="csrf_token" value="{{csrf_token}}" />
<input type="hidden" name="upload" value="1" />

</form>