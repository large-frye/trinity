<form action="{{post_url}}" method="post" accept-charset="utf-8">
	
	<div class="section">
		<div class="box">
			<div class="title">
				Gallery
				<span class="hide"></span>
			</div>
			<div class="content nopadding">
		
				<div class="row">
					<div class="right">
						<a href="#" class="select_all">Select All</a>
						&nbsp;|&nbsp;
						<a href="#" class="unselect_all">Unselect All</a>
					</div>
				</div>
		
				<div class="gallery" id="uploaded_photos">
				
					{{#photo_thumbnails}}
						<div class="thumb {{#error}}no_select{{/error}}" id="i{{id}}">
							{{^error}}
								<div class="hover"><a href="#" class="remove_photo" title="Remove Photo"></a></div>
								<div class="view"><a href="{{orig_url}}" title="View Photo" class="view_photo"></a></div>
							{{/error}}
							
							
							<input type="hidden" name="meta[{{id}}][action]" value="{{#error}}remove{{/error}}" class="hdn_action" />
							<input type="hidden" name="meta[{{id}}][description]" class="hdn_description" value="{{description}}" />
							<input type="hidden" name="meta[{{id}}][cat_id]" class="hdn_cat_id" value="{{category_id}}">
							

							<span class="thumb-item" title="{{title}}">
								<img src="{{thumb_url}}" alt="{{original_filename}}" />
							</span>
						</div>					
					{{/photo_thumbnails}}
				</div>
			</div>
		</div>
	</div>
			
	<div class="section">
		<div class="half">
			<div class="box">
				<div class="title">
					Category
				</div>
				<div class="content">
					
					{{> categories}}

				</div>		

			</div>

		</div>
		<div class="half">
			<div class="box">
				<div class="title">
					Description
				</div>
				<div class="content">
					<div class="row">
						<textarea name="description" class="main_description" style="height:200px;"></textarea>
					</div>

				</div>
			</div>			
		</div>
	</div>
	
	<p>&nbsp;</p>
	<button type="submit" class="blue"><span>Save</span></button>

	<input type="hidden" name="csrf_token" value="{{csrf_token}}" />
	<input type="hidden" name="step" value="2" />

</form>